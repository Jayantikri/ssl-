#install dependencies
1 installing apache
---
sudo apt update 
sudo apt install apache2
2 install mysql 
sudo apt install mysql-server
sudo mysql
exit
3 installing php
---
sudo apt install php libapache2-mod-php php-mysql
4 configure wordpress user database
---
CREATE DATABASE wordpress DEFAULT CHARACTER SET utf8 COLLATE utf8_unicode_ci;
---
CREATE USER 'wordpressuser'@'%' IDENTIFIED WITH mysql_native_password BY 'password';
---
GRANT ALL ON wordpress.* TO 'wordpressuser'@'%';
---
FLUSH PRIVILEGES;
exit;
5 installing additional php extensions---
sudo apt install php-curl php-gd php-mbstring php-xml php-xmlrpc php-soap php-intl php-zip
sudo systemctl restart apache2
sudo nano /etc/apache2/sites-available/wordpress.conf
<VirtualHost *:80>
. . .
    <Directory /var/www/wordpress/>
        AllowOverride All
    </Directory>
. . .
</VirtualHost>
sudo apache2ctl configtest
sudo a2enmod rewrite
#installing wordpress
cd /tmp
curl -O https://wordpress.org/latest.tar.gz
tar xzvf latest.tar.gz
touch /tmp/wordpress/.htaccess
cp /tmp/wordpress/wp-config-sample.php /tmp/wordpress/wp-config.php
mkdir /tmp/wordpress/wp-content/upgrade
sudo cp -a /tmp/wordpress/. /var/www/html/wordpress
sudo chown -R www-data:www-data /var/www/html/wordpress
sudo find /var/www/html/wordpress/ -type d -exec chmod 770 {} \;
sudo find /var/www/html/wordpress/ -type f -exec chmod 664 {} \;
#setting wordpress config file
curl -s https://api.wordpress.org/secret-key/1.1/salt/
sudo nano /var/www/html/wordpress/wp-config.php


















